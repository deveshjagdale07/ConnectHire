<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .profile-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .profile-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            text-align: center;
            cursor: pointer;
        }
        .profile-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }
        /* Modal styles */
        .modal {
            display: none; 
            position: fixed; 
            z-index: 1; 
            left: 0;
            top: 0;
            width: 100%; 
            height: 100%; 
            overflow: auto; 
            background-color: rgba(0,0,0,0.4); 
        }
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto; 
            padding: 20px;
            border: 1px solid #888;
            width: 80%; 
            border-radius: 10px;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Browse Developers</h1>
    
    <div class="profile-list">
        <% if (profiles.length > 0) { %>
            <% profiles.forEach(profile => { %>
                <div class="profile-card" data-user-id="<%= profile.user_id %>">
                    <img src="<%= profile.profile_picture || '/images/default_avatar.png' %>" alt="<%= profile.name %>">
                    <h3><%= profile.name %></h3>
                    <p><strong>Role:</strong> <%= profile.role %></p>
                    <p><strong>Skills:</strong> <%= profile.skills %></p>
                    <p><strong>Location:</strong> <%= profile.location %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No developer profiles found.</p>
        <% } %>
    </div>

    <div id="profileModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modal-body">
                </div>
        </div>
    </div>
    
</body>
<script>
        const modal = document.getElementById("profileModal");
        const modalBody = document.getElementById("modal-body");
        const span = document.getElementsByClassName("close")[0];

        document.querySelectorAll('.profile-card').forEach(card => {
            card.addEventListener('click', async (event) => {
                const userId = event.currentTarget.dataset.userId;

                // Fetch the full profile data from the new API route
                const response = await fetch(`/job_seeker/api/profile/${userId}`);
                const data = await response.json();

                if (response.ok) {
                    const profile = data.profile;
                    const certifications = data.certifications;

                    // Build the HTML content for the modal
                    let skillsList = '';
                    if (profile.skills) {
                        skillsList = profile.skills.split(',').map(skill => `<li>${skill.trim()}</li>`).join('');
                    }

                    let certList = '';
                    certifications.forEach(cert => {
                        certList += `
                            <li>
                                <a href="${cert.file_url}" target="_blank">${cert.name}</a>
                            </li>
                        `;
                    });

                    modalBody.innerHTML = `
            <h2>${profile.name}'s Profile</h2>
            <div style="text-align: center;">
                <img src="${profile.profile_picture || '/images/default_avatar.png'}" alt="Profile Picture" style="width: 150px; height: 150px; border-radius: 50%;">
            </div>
            <p><strong>Role:</strong> ${profile.role}</p>
            <p><strong>Location:</strong> ${profile.location}</p>
            <p><strong>Work Preferences:</strong> ${profile.work_preferences}</p>
            <p><strong>Experience:</strong> ${profile.experience}</p>
            <p><strong>Projects:</strong> ${profile.projects}</p>
            <h3>Skills</h3>
            <ul>${skillsList}</ul>
            <h3>Certifications</h3>
            <ul>${certList}</ul>
            <br>
            <a href="${profile.resume_url}" target="_blank">Download Resume</a>
            <hr>
            <a href="/company/request_job/${profile.user_id}"><button>Hire This Developer</button></a>
        `;
        modal.style.display = "block";
    } else {
                    alert('Could not load profile.');
                }
            });
        });

        // Close the modal when the user clicks on <span> (x)
        span.onclick = function() {
            modal.style.display = "none";
        }

        // Close the modal when the user clicks anywhere outside of the modal
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</html>